<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    android:background="@color/color_bg"
    >
<include

    layout="@layout/header"
    />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="30dp"
            android:id="@+id/ProfileScreen_logoLayout"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_black"
                    android:text="Image\nLoading..."
                    android:padding="15dp"
                    android:textSize="10sp"
                    android:visibility="gone"

                    />


                <com.thriftskool.thriftskool1.widgets.SquareImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ProfileScreen_logo"
                    android:scaleType="fitXY"
                    />

            </RelativeLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >

            <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                android:id="@+id/ProfileScreen_userName"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypost_profilescreen"
                android:textSize="15sp"
                android:textColor="@color/color_textcolor"


                />


            <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                android:id="@+id/ProfileScreen_universityName"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mypost_profilescreen"
                android:textSize="15sp"
                android:textColor="@color/color_textcolor"


                />


</LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_myPostLayout"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/profile_myprofile"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mypost_profilescreen"
                    android:textSize="18sp"
                    android:textColor="@color/profile_mypost"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"

                    />
            </LinearLayout>



            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"

                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_watchlistLayout"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_watchlist"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/watchlist_profilescreen"
                    android:textSize="18sp"
                    android:textColor="@color/profile_watchlist"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"


                    />
            </LinearLayout>



            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_inboxLayout"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:layout_height="25dp"
                    android:background="@drawable/profile_messages"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/inbox_profilescreen"
                    android:textSize="18sp"
                    android:textColor="@color/profile_message"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_invite_friend"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_invite"
                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invite_friend_profilescreen"
                    android:textSize="18sp"
                    android:textColor="#EA4A1C"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"


                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_editProfileLayout"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_editprofile"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editprofile_profilescreen"
                    android:textSize="18sp"
                    android:textColor="@color/profile_editprofile"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"


                    />
            </LinearLayout>



            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_changePasswordLayout"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_changepassword"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/changepassword_profilescreen"
                    android:textSize="18sp"
                    android:textColor="@color/profile_changepassword"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_contactAppAdminLayout"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:scaleType="fitXY"
                    android:layout_height="30dp"
                    android:background="@drawable/profile_contactapp"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contactappadmin_profilescreen"
                    android:textSize="18sp"
                    android:textColor="@color/profile_contactappadmin"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"


                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ProfileScreen_signoutLayout"
                android:gravity="center"
                android:background="@drawable/post"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/profile_singout"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signout_profilescreen"
                    android:textSize="18sp"
                    android:textColor="@color/profile_signout"
                    android:id="@+id/ProfileScreen_signout"

                    />

                <com.thriftskool.thriftskool1.widgets.TextAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_angle_right"
                    android:textColor="@color/color_textcolor"


                    />
            </LinearLayout>




        </LinearLayout>


    </ScrollView>

</LinearLayout>
