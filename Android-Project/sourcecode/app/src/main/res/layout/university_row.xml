<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@android:color/transparent"
              android:id="@+id/University_Row"

    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:background="@color/color_white"
                  android:layout_marginBottom="5dp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:padding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.thriftskool.thriftskool1.widgets.SquareImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/University_Row_image"/>

        </RelativeLayout>

    <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:textSize="15sp"
        android:padding="5dp"
        android:id="@+id/University_Row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_textcolor"

        />

        <com.thriftskool.thriftskool1.widgets.TextAwesome
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/University_Row_isCkecked"
            android:textColor="@color/color_greenheader"
            />


    </LinearLayout>

</LinearLayout>
