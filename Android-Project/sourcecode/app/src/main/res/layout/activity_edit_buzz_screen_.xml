<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include
        layout="@layout/header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/post"
                android:padding="10dp"
                >
                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/addphoto_postscreen"
                    android:textSize="15sp"
                    android:textColor="@color/color_hinttextcolor"


                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:background="@drawable/photobg"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_centerInParent="true"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:background="@drawable/image1"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/EditBuzzScreen_photo1"
                            android:scaleType="fitXY"
                            android:padding="1dp"

                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:background="@drawable/photobg"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_centerInParent="true"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:background="@drawable/image2"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/EditBuzzScreen_photo2"
                            android:scaleType="fitXY"
                            android:padding="1dp"

                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:background="@drawable/photobg"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_centerInParent="true"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:background="@drawable/image3"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/EditBuzzScreen_photo3"
                            android:scaleType="fitXY"
                            android:padding="1dp"

                            />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:background="@drawable/photobg"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_centerInParent="true"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:background="@drawable/image4"

                            />
                        <com.thriftskool.thriftskool1.widgets.SquareImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/EditBuzzScreen_photo4"
                            android:scaleType="fitXY"
                            android:padding="1dp"

                            />

                    </RelativeLayout>



                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/post"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"

                >
                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/title1_postscreen"
                    android:textSize="15sp"
                    android:textColor="@color/color_hinttextcolor"

                    />

                <com.thriftskool.thriftskool1.widgets.EditTextMyriadProRegular
                    android:id="@+id/EditBuzzScreen_title"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_textcolor"

                    />

            </LinearLayout>




            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/post"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                >
                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_postscreen"
                    android:textSize="15sp"
                    android:textColor="@color/color_hinttextcolor"

                    />

                <com.thriftskool.thriftskool1.widgets.EditTextMyriadProRegular
                    android:id="@+id/EditBuzzScreen_description"
                    android:textSize="15sp"
                    android:background="@android:color/transparent"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_textcolor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/post"
                android:paddingTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:id="@+id/EditBuzzScreen_ExpiryDateLayout"
                >
                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expirydate_postscreen"
                    android:textSize="15sp"
                    android:textColor="@color/color_hinttextcolor"

                    />

                <com.thriftskool.thriftskool1.widgets.TextViewMyriadProRegular
                    android:id="@+id/EditBuzzScreen_ExpiryDate"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_textcolor"

                    />

            </LinearLayout>


            <com.thriftskool.thriftskool1.widgets.TextViewMyriadProBold
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EditBuzzScreen_submit"
                android:textColor="@color/color_white"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="Save"
                android:background="@drawable/postsubmit"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"

                />


        </LinearLayout>



    </ScrollView>


</LinearLayout>
