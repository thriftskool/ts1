<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="0dp" android:shape="rectangle">
        <solid android:color="#41A045" />

        <stroke android:width="1dp" android:color="#41A045" />

        <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
    </shape></item>
    <item android:state_pressed="false"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="0dp" android:shape="rectangle">
        <solid android:color="#57B65B" />

        <stroke android:width="1dp" android:color="#57B65B" />

        <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
    </shape></item>

</selector>